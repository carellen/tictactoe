      = @game.moves["1"]
  %div{:class => "spot col-middle row-top #{@game.moves["2"]}", "data-moves" => "2"}
    %h1#2
      = @game.moves["2"]
  %div{:class => "spot col-right row-top #{@game.moves["3"]}", "data-moves" => "3"}
